<launch>
  <!-- namespace for camera input -->
  <arg name="camera" default="/camera"/>
  <arg name="image" default="image_rect"/>

  <node pkg="fiducial_detect" name="fiducials_localization"
    type="fiducials_localization" output="screen" respawn="true">
    <param name="tag_height" value="$(env HOME)/.ros/fiducials/Tag_Heights.xml" />
    <param name="data_directory" value="$(env HOME)/.ros/fiducials" />
    <param name="map_frame" value="odom" />
    <param name="pose_frame" value="slam" />
    <param name="publish_images" value="true" />
    <param name="publish_tf" value="false" />
    <remap from="fiducials_localization/camera" to="$(arg camera)/$(arg image)"/>
    <remap from="fiducials_localization/camera_info" to="$(arg camera)/camera_info"/>
    <param name="publish_images" value="true"/>
  </node>
</launch>
